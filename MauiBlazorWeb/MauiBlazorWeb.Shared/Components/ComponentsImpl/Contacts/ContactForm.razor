@using global::Shared.Dtos.DtosImpl
@code {
    [Parameter, EditorRequired] public ContactDto Contact { get; set; }
}

<MudTextField @bind-Value="Contact.FirstName" Label="First Name" Variant="Variant.Outlined" />
<ValidationMessage For="@(() => Contact.FirstName)" />

<MudTextField @bind-Value="Contact.LastName" Label="Last Name" Variant="Variant.Outlined" />
<ValidationMessage For="@(() => Contact.LastName)" />

<MudTextField @bind-Value="Contact.Email" Label="Email" Variant="Variant.Outlined" />
<ValidationMessage For="@(() => Contact.Email)" />

<MudTextField @bind-Value="Contact.PhoneNumber" Label="Phone" Variant="Variant.Outlined" />
<ValidationMessage For="@(() => Contact.PhoneNumber)" />

