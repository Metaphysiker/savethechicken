@using MauiBlazorWeb.Shared.Components.ComponentsImpl.Contacts
@using MauiBlazorWeb.Shared.Components.ComponentsImpl.Addresses
@using MudBlazor
@using global::Shared.Dtos.DtosImpl
@code {
    [Parameter, EditorRequired]
    public SaveChickenRequestDto Model { get; set; } = new SaveChickenRequestDto();
    private List<int> saveChickenActionIds = new List<int>();

    protected override void OnInitialized()
    {
        // For demonstration, populate with sample IDs
        saveChickenActionIds = Enumerable.Range(1, 10).ToList();
    }
}

<ContactForm Contact="Model.Contact" />
<AddressForm Address="Model.Address" />

<MudItem>
    <MudText Typo="Typo.subtitle2">Number of Chickens to be Saved:</MudText>
    <MudNumericField T="int" @bind-Value="Model.NumberOfChickensToBeSaved" Label="Number of Chickens" Variant="Variant.Outlined" />
    <ValidationMessage For="@(() => Model.NumberOfChickensToBeSaved)" />
</MudItem>
<MudItem>
    <MudText Typo="Typo.subtitle2">Description of Place:</MudText>
    <MudTextField @bind-Value="Model.DescriptionOfPlaceForChickens" Label="Description" Variant="Variant.Outlined" Lines="3" />
    <ValidationMessage For="@(() => Model.DescriptionOfPlaceForChickens)" />
</MudItem>
<MudItem>
    <MudCheckBox T="bool" @bind-Checked="Model.AcceptTermsAndConditions" Label="Accept Terms and Conditions" />
    <ValidationMessage For="@(() => Model.AcceptTermsAndConditions)" />
</MudItem>
<MudItem>
    <MudText Typo="Typo.subtitle2">Message:</MudText>
    <MudTextField @bind-Value="Model.Message" Label="Message" Variant="Variant.Outlined" Lines="3" />
    <ValidationMessage For="@(() => Model.Message)" />
</MudItem>
