@using MauiBlazorWeb.Shared.Resources.Strings
@using Microsoft.Extensions.Localization
@using global::Shared.Dtos.DtosImpl
@inject IStringLocalizer<AppResources> L

@code {
    [Parameter, EditorRequired] public AddressDto Address { get; set; }

    [Parameter]
    public bool IsReadOnly { get; set; } = false;
}

<MudPaper Class="pa-4 my-4" Elevation="2">
    <MudText Typo="Typo.h6">Adresse</MudText>

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudTextField ReadOnly="@IsReadOnly" @bind-Value="Address.City" Label="@L["Address_City"]" Variant="Variant.Outlined" />
        <ValidationMessage For="@(() => Address.City)" />
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudTextField ReadOnly="@IsReadOnly" @bind-Value="Address.PostalCode" Label="@L["Address_PostalCode"]" Variant="Variant.Outlined" />
        <ValidationMessage For="@(() => Address.PostalCode)" />
    </MudItem>
</MudGrid>

<MudGrid>

    <MudItem xs="12">
        <MudTextField ReadOnly="@IsReadOnly" @bind-Value="Address.Street" Label="@L["Address_Street"]" Variant="Variant.Outlined" />
        <ValidationMessage For="@(() => Address.Street)" />
    </MudItem>
</MudGrid>
</MudPaper>
