@page "/save-chicken-requests/{Id:int}/edit"
@using MauiBlazorWeb.Shared.Components.ComponentsImpl.SaveChickenRequests
@using MauiBlazorWeb.Web.Services.ServicesImpl
@using global::Shared.Dtos.DtosImpl
@using MauiBlazorWeb.Shared.Factories.FactoriesImpl
@using MauiBlazorWeb.Shared.Components.ComponentsImpl
@inject GenericDtoServiceFactory DtoServiceFactory

<MudContainer>

<h2>Edit Save Chicken Request</h2>

@if (modelWithFiles != null)
{
    <GenericUpdateWithFiles TDto="SaveChickenRequestDto" model="modelWithFiles">
        <ChildContent Context="editModel">
            <SaveChickenRequestFormWithFiles EntityWithFiles="editModel" />
        </ChildContent>
    </GenericUpdateWithFiles>
}
else
{
    <p>Loading...</p>
}
</MudContainer>
@code {
    [Parameter] public int Id { get; set; }
    private SaveChickenRequestDto? model = null;
    private ItemWithBrowserFiles<SaveChickenRequestDto>? modelWithFiles = null;

    private GenericDtoService<SaveChickenRequestDto, SaveChickenRequestSearch>? _service;

    protected override async Task OnInitializedAsync()
    {
        _service = DtoServiceFactory.Create<SaveChickenRequestDto, SaveChickenRequestSearch>();
        model = await _service.GetByIdAsync(Id);
        modelWithFiles = new ItemWithBrowserFiles<SaveChickenRequestDto>
        {
            Item = model,
            Files = new List<IBrowserFile>()
        };
        StateHasChanged();
    }

}
