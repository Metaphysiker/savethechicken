@page "/counter"
@using global::Shared.Dtos.DtosImpl

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<p>
    City: @saveChickenRequestDto.City
</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private SaveChickenRequestDto saveChickenRequestDto = new SaveChickenRequestDto();
    private bool _hasInitialized = false;

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            _hasInitialized = true;
            saveChickenRequestDto.City = "Initial City";
            StateHasChanged();
            // Do something here after initial render
            // Example: await SomeInitializationAsync();
        }
    }
}
