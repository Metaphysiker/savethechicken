@using MudBlazor
@inherits LayoutComponentBase
@inject AuthService AuthService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        Rettet das Huhn
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen"
        Variant="DrawerVariant.Mini"
    >
        <NavMenu
            _drawerOpen="@_drawerOpen"
            OnCloseDrawer="CloseDrawer"
        ></NavMenu>
    </MudDrawer>
    <MudMainContent Class="main-content-spacing">
        @Body
    </MudMainContent>
</MudLayout>

<style>
    .main-content-spacing {
        padding-top: 80px; /* adjust as needed */
    }

</style>

@code {
    private bool? isTokenValid = null;
    private bool _drawerOpen = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            isTokenValid = await AuthService.CheckIfLoggedInAsync();

            if (isTokenValid == true)
            {
                await AuthService.RefreshTokenAsync();
            }

            StateHasChanged();
        }
    }

    void DrawerToggle(MouseEventArgs e)
    {
        _drawerOpen = !_drawerOpen;
    }

    void CloseDrawer()
    {
        _drawerOpen = false;
    }
}
