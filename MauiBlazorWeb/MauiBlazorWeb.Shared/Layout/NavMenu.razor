<MudNavMenu>
    <MudNavLink Href="/" Class="nav-link-entry" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="/save-chicken-requests" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Support">Rettet das Huhn</MudNavLink>
    <MudNavLink Href="/save-chicken-actions" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Dashboard">Rettungs-Aktionen</MudNavLink>

    <MudNavLink Href="/new-save-chicken-request" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Support">Platz für Hühner anbieten</MudNavLink>
    <MudNavLink Href="/new-driver" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DirectionsCar">Fahrer werden</MudNavLink>
    <MudNavLink Href="/new-farm" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Agriculture">Betrieb anmelden</MudNavLink>


    <MudDivider Class="my-2" />

    <MudNavLink Href="/new-save-chicken-action" Class="nav-link-entry" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Neue Rettungs-Aktion</MudNavLink>
    <MudDivider Class="my-2" />
    @if (_drawerOpen)
    {
        <MudNavLink OnClick="@HandleCloseDrawer" Icon="@Icons.Material.Filled.ArrowLeft">Schliessen</MudNavLink>
    }
</MudNavMenu>

<style>
    .nav-link-entry {
        white-space: nowrap;
        overflow: hidden;
    }
</style>

@code {
    [Parameter] public bool _drawerOpen { get; set; }
    [Parameter] public EventCallback OnCloseDrawer { get; set; }

    private async Task HandleCloseDrawer()
    {
        await OnCloseDrawer.InvokeAsync();
    }
}
